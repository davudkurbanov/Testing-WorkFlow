@model UsersLoginViewModel
@{
    ViewData["Title"] = "Login";
    var userName = Context.Session.GetString("UserName");
    var authenticationToken = Context.Session.GetString("AuthenticationToken");
}

<h2>Login</h2>
 
@if (userName == null)
{ 
<div class="row">
    <form asp-action="Login">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-light" value="Login" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
}
else
{
    <div class="Row">
        <h2>You are already logged in!</h2>
        <a asp-action="UserDetails" asp-route-authenticationToken="@authenticationToken"
           class="btn btn-info">My User Details</a>
        <a asp-action="LogOut" class="btn btn-danger">Logout</a>
    </div>
}

