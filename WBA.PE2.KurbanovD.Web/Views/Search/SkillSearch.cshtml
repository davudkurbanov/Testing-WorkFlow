@model SearchSkillSearchViewModel
@{
    ViewData["Title"] = "SkillSearch";
}

<h2>Skill Search</h2>

<div class="row">
    <form method="post">
        <div class="form-group">
            <label asp-for="SkillStat"></label>
            <select class="form-control" asp-for="SkillStat" asp-items="Model.SkillStats"></select>
            <span asp-validation-for="SkillStat" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Value"></label>
            <input asp-for="Value" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-info" value="Search" />
    </form>
</div>

