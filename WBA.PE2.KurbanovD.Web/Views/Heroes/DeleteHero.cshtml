@model HeroesDeleteViewModel
@{
    ViewData["Title"] = "DeleteHero";
}

<h2>Are you sure you want to delete hero "@Model.Name"?</h2>

<form asp-action="DeleteHero" asp-controller="Heroes">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete this hero" class="btn btn-danger" />
    <a asp-action="GetAllHeroes" asp-controller="Heroes" class="btn btn-success">Go back to hero overview</a>
</form>


