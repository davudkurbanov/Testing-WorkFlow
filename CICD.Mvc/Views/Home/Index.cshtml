@using CICD.Mvc.ViewModels
@model StringCalculatorViewModel

<div class="text-center">
    <h1 class="display-4">Stringcalculator</h1>
    <form method="post">
        <input type="text" asp-for="Input" value="@Model.Input" />
        <p>Sum: @Model.Sum</p>
        @if (Model.Error != String.Empty)
        {
            <p>Error: @Model.Error</p>
        }
        <input type="submit" value="+" asp-controller="Home" asp-action="Calculate" />
        <input type="submit" value="email" asp-controller="Home" asp-action="Email" disabled="@(Model.EmailIsSent ? "disabled" : null)" />
    </form>
</div>
